<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Theme.SocialMedia" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="Theme.SocialMedia" parent="Base.Theme.SocialMedia" />

    <style name="Theme.Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="strokeColor">@color/black</item>
        <item name="android:padding">10dp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="strokeWidth">2dp</item>
        <item name="rippleColor">@color/black</item>
        <item name="android:animateOnClick">true</item>
    </style>

    <style name="Theme.Textview" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/black</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="hintEnabled">false</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="Theme.AppBar" parent="ThemeOverlay.Material3.BottomAppBar">
        <item name="android:animateOnClick">false</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="android:background">@color/white</item>
        <item name="elevation">8dp</item>
        <item name="colorPrimaryVariant">@color/white</item>

    </style>
</resources>